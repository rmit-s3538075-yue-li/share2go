<p id="notice"><%= notice %></p>

<div class="container border-bottom mb-3">
    <div class="row p-md-3">
        <span class="h1 col-12 text-nowrap text-center">Report Detail</span>
    </div>
</div>

<div class="container mt-3 pt-3 pb-2 border border-info rounded shadow">
  <div class="row justify-content-center">
    <strong class="col-5 col-sm-3 text-center p-3">User:</strong>
    <p class="col-7 col-sm-4 h6 bg-light p-3"><%= @report.user_id %></p>
  </div>
  
  <div class="row justify-content-center">
    <strong class="col-5 col-sm-3 text-center p-3">Booking:</strong>
    <p class="col-7 col-sm-4 h6 bg-light p-3"><%= @report.booking_id %></p>
  </div>
  
  <div class="row justify-content-center">
    <strong class="col-5 col-sm-3 text-center p-3">Car:</strong>
    <p class="col-7 col-sm-4 h6 bg-light p-3"><%= @report.car_id %></p>
  </div>
  
  <div class="row justify-content-center">
    <strong class="col-5 col-sm-3 text-center p-3">Content:</strong>
    <p class="col-7 col-sm-4 h6 bg-light p-3"><%= @report.content %></p>
  </div>
</div>
