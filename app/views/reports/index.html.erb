<p id="notice"><%= notice %></p>

<div class="container border-bottom mb-3">
    <div class="row p-md-3">
        <span class="h1 col-12 text-nowrap text-center">Listing Reports</span>
    </div>
</div>

<div class="container table-responsive">
  <table class="table table-hover">
    <thead class="thead-dark">
      <tr>
        <th scope="col">User</th>
        <th scope="col">Booking</th>
        <th scope="col">Content</th>
        <th scope="col-3" colspan="2"></th>
      </tr>
    </thead>
  
    <tbody>
      <% @reports.each do |report| %>
        <tr>
          <td><%= report.user_id %></td>
          <td><%= report.booking_id %></td>
          <td><%= report.content %></td>
          <td><%= link_to 'Show', report, class: "btn btn-info btn-sm" %></td>
          <td><%= link_to 'Destroy', report, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<br>