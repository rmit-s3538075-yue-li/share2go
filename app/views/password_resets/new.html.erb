<p id="notice"><%= notice %></p>
<div class="container border-bottom">
    <div class="row p-md-3">
      <span class="h1 col-12 text-nowrap text-center">Forgot Password</span>
    </div>
</div>
<%= form_tag password_resets_path, :method => :post do %>
 <div class ="row justify-content-md-center m-3">
     <%= label_tag :email, nil, :class => "col-sm-2 col-form-label"%>
     <div class="col-sm-6">
      <%= text_field_tag :email, params[:email], class: "form-control"%>
     </div>
 </div>
  <div class ="action"><%= submit_tag "Submit", class:"btn btn-primary btn-md col-4 offset-4"%></div>
<%end%>
