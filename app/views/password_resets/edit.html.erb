<%= flash[:error] %>
<div class="container border-bottom">
    <div class="row p-md-3">
      <span class="h1 col-12 text-nowrap text-center">Reset Password</span>
    </div>
</div>

<%= form_for @user, :url => password_reset_path(params[:id]) do |f|%>
    <div class="error_messages">
        <% if @user.errors.any? %>
            <h2>Form is invalid</h2>
            <ul>
                <% for message in @user.errors.full_messages %>
                    <li><%= message %></li>
                <%end%>
            </ul>
        <% end %>
    </div>

    <div class="row justify-content-md-center m-3">
        <%=f.label :password, :class => "col-sm-2 col-form-label"%>
        <div class="col-sm-6">
            <%=f.password_field :password, class: "form-control" %>
        </div>
    </div>
    <div class="row justify-content-md-center m-3">
        <%=f.label :password_confirmation, :class => "col-sm-2 col-form-label"%>
        <div class="col-sm-6">
            <%=f.password_field :password_confirmation, class: "form-control" %>
        </div>
    </div>
    <div class="action"><%= f.submit "Update Password", class:"btn btn-primary btn-md col-4 offset-4"%></div>
<%end%>