<p id="notice"><%= notice %></p>

<h1>Listing Cars</h1>

<table>
  <thead>
    <tr>
      <th>Image</th>
      <th>Make</th>
      <th>Year</th>
      <th>Model</th>
      <th>Body type</th>
      <th>Number plate</th>
      <th>Condition</th>
      <th>Price</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cars.each do |car| %>
      <tr>
        <td><%= image_tag(car.image.url, alt: 'Car image') if car.image? %></td>
        <td><%= car.make %></td>
        <td><%= car.year %></td>
        <td><%= car.model %></td>
        <td><%= car.body_type %></td>
        <td><%= car.number_plate %></td>
        <td><%= car.condition %></td>
        <td><%= car.price %></td>
        <td><%= car.status %></td>
        <td><%= link_to 'Show', car %></td>
        <td><%= link_to 'Edit', edit_car_path(car) %></td>
        <td><%= link_to 'Destroy', car, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

