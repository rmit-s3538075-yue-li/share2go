<%= form_for(@car) do |f| %>
  <% if @car.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@car.errors.count, "error") %> prohibited this car from being saved:</h2>

      <ul>
      <% @car.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row justify-content-md-center m-3">
    <%= f.label :make, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-6">
      <%= f.text_field :make, class: "form-control" %>
    </div>
  </div>
  <div class="row justify-content-md-center m-3">
    <%= f.label :year, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-6">
      <%= f.number_field :year, class: "form-control" %>
    </div>
  </div>
  <div class="row justify-content-md-center m-3">
    <%= f.label :model, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-6">
      <%= f.text_field :model, class: "form-control" %>
    </div>
  </div>
  <div class="row justify-content-md-center m-3">
    <%= f.label :body_type, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-6">
      <%= f.select :body_type, options_for_select(["Hatchback", "Sedan", "MPV","SUV","Crossover","Coupe","Convertible","Others"]),{}, class: "form-control" %>
    </div>
  </div>
  <div class="row justify-content-md-center m-3">
    <%= f.label :number_plate, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-6">
      <%= f.text_field :number_plate, class: "form-control" %>
    </div>
  </div>
  <div class="row justify-content-md-center m-3">
    <%= f.label :condition, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-6">
      <%= f.select :condition, options_for_select(["Excellent", "Good", "Fair","Poor"]),{}, class: "form-control" %>
    </div>
  </div>
  <div class="row justify-content-md-center m-3">
    <%= f.label :price, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-6">
      <%= f.number_field :price, class: "form-control" %>
    </div>
  </div>
  <div class="row justify-content-md-center m-3">
    <%= f.label :location_id, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-6">
      <%= f.select :location_id, options_for_select(@locations.collect {|l| [l.street, l.id]}, @car.location_id),{}, class: "form-control", include_blank: true %>
    </div>
  </div>
  <div class="row justify-content-md-center m-3">
    <%= f.label :status, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-6">
      <%= f.select :status, options_for_select(["Available","Unavailable"]),{}, class: "form-control" %>
    </div>
  </div>
  <div class="row justify-content-md-center m-3">
    <%= f.label :image, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-6">
      <%= f.file_field :image, class: "form-control-file p-2 border" %>
    </div>
  </div>
  <div class="actions pt-2 row">
    <%= f.submit "Submit", class:"btn btn-primary btn-md col-4 offset-4" %>
  </div>

<% end %>
