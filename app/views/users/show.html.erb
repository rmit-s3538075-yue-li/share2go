<p id="notice"><%= notice %></p>

<div class="container border-bottom mb-3">
    <div class="row p-md-3">
        <span class="h1 col-12 text-nowrap text-center">Personal Info</span>
    </div>
</div>


<div class="row justify-content-center m-1">
  <strong class="col-sm-2 align-middle p-3">First name:</strong>
  <p class="col-md-4 p-3 bg-light text-dark align-middle">
    <%= @user.first_name %>
  </p>
</div>

<div class="row justify-content-center m-1">
  <strong class="col-sm-2 align-middle p-3">Last name:</strong>
  <p class="col-md-4 p-3 bg-light text-dark align-middle">
    <%= @user.last_name %>
  </p>
</div>

<div class="row justify-content-center m-1">
  <strong class="col-sm-2 align-middle p-3">License NO.:</strong>
  <p class="col-md-4 p-3 bg-light text-dark align-middle">
    <%= @user.license_no %>
  </p>
</div>

<div class="row justify-content-center m-1">
  <strong class="col-sm-2 align-middle p-3">Mobile:</strong>
  <p class="col-md-4 p-3 bg-light text-dark align-middle">
    <%= @user.mobile %>
  </p>
</div>

<div class="row justify-content-center m-1">
  <strong class="col-sm-2 align-middle p-3">Email:</strong>
  <p class="col-md-4 p-3 bg-light text-dark align-middle">
    <%= @user.email %>
  </p>
</div>

<div class="row justify-content-center m-1">
  <strong class="col-sm-2 align-middle p-3">Credit:</strong>
  <p class="col-md-4 p-3 bg-light text-dark align-middle">
    <%= @user.credit %>
  </p>
</div>

<div class="container border-bottom mb-3">
    <div class="row p-md-3">
        <span class="h1 col-12 text-nowrap text-center">Booking History</span>
    </div>
</div>

<div class="row justify-content-center">
  <table class="table table-hover table-dark col-md-8">
    <thead>
      <tr>
        <th scope="col">Car</th>
        <th scope="col">User</th>
        <th scope="col">Pickup time</th>
        <th scope="col">Return time</th>
        <th scope="col">Pickup location</th>
        <th scope="col">Return location</th>
        <th scope="col">Status</th>
        <th colspan="1"></th>
      </tr>
    </thead>
  
    <tbody>
      <% @bookings.each do |booking| %>
        <tr>
          <td><%= booking.car_id %></td>
          <td><%= booking.user_id %></td>
          <td><%= booking.pickup_time %></td>
          <td><%= booking.return_time %></td>
          <td><%= booking.pickup_location_id %></td>
          <td><%= booking.return_location_id %></td>
          <td><%= booking.status %></td>
          <td><%= link_to 'Show', booking %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>


