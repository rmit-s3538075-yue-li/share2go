<div class="container border-bottom">
    <div class="row p-md-3">
      <span class="h1 col-12 text-nowrap text-center">Admin Login</span>
    </div>
</div>

ADMIN <br> 1234

<%= form_tag 'admin-login' do %>

  <div class="mt-4">
    <div class="row justify-content-md-center m-3">
      <lable class="col-sm-1 col-form-label">Username </lable>
      <div class="col-sm-5">
        <%= text_field_tag :username, '', class: 'form-control' %>
      </div>
    </div>
    
    <div class="row justify-content-md-center m-3">
      <lable class="col-sm-1 col-form-label">Password </lable>
      <div class="col-sm-5">
        <%= password_field_tag :password, '', class: 'form-control' %>
      </div>
    </div>
    
    <div class="pt-2 row justify-content-center mb-1">
      <a href="" class="col-sm-3 text-center anchor pt-2">Forget password?</a>
      <%= submit_tag "Login", class:"btn btn-primary btn-md col-sm-2 pt-2" %>
    </div>
  </div>

<% end %>