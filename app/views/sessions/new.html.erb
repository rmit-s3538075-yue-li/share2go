
<p id="notice"><%= notice %></p>

<div class="container border-bottom">
    <div class="row p-md-3">
      <span class="h1 col-12 text-nowrap text-center">Login</span>
    </div>
</div>



<%= form_tag '/login' do %>

  <div class="mt-4">
    <div class="row justify-content-md-center m-3">
      <lable class="col-sm-1 col-form-label">Email </lable>
      <div class="col-sm-5">
        <%= text_field_tag :email, '', class: 'form-control' %>
      </div>
    </div>
    
    <div class="row justify-content-md-center m-3">
      <lable class="col-sm-1 col-form-label">Password </lable>
      <div class="col-sm-5">
        <%= password_field_tag :password, '', class: 'form-control' %>
      </div>
    </div>
    
    <div class="pt-2 row justify-content-center mb-1">
      <a href="/admin-login" class="col-sm-3 text-center anchor pt-2 mb-2">Administration Login</a>
      <%= submit_tag "Login", class:"btn btn-primary btn-md col-sm-2 pt-2" %>
    </div>
    <div class="row justify-content-center mb-2">
      <a href="password_resets/new" class="col-sm-3 text-center anchor pt-2 mb-2">Forgot password?</a>
      <a href="users/new" class="col-sm-2 text-center anchor pt-2">Need a new account?</a>
    </div>
  </div>

<% end %>